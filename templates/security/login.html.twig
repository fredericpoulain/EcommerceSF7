{% extends 'base.html.twig' %}
{% block importmap %}
    {{ importmap(['app', 'login']) }}
{% endblock %}
{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <h1 class="titleLogin">Se connecter</h1>

        <div>
            <label for="inputEmail">Email</label>
            <input type="email" value="demo@fredericpoulain.fr" name="email" id="inputEmail" class="form-control"
                   autocomplete="email" required autofocus>
        </div>

        <div>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" value="demo" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password"
                   required>
        </div>


        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir
            </label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
        <div class="forgotBloc">
            <a href="{{ path('app_forgot_password') }}">J'ai oubli√© mon mot de passe</a>
        </div>
    </form>
{% endblock %}
